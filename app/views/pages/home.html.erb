<div class="landing">
      <div class="container">
        <div class="row">
        <div class="landing-card">
          <h1>Feeling sad - rent a buddy</h1>
            <%= form_tag("/search", method: "get") do %>
              <%= label_tag(:query, "Search for:") %>
              <%= text_field_tag(:query) %>
              <%= label_tag(:start_date, "Start-Date:") %>
              <%= date_field(:search, :start_date) %>
              <%= label_tag(:end_date, "End-Date:") %>
              <%= date_field(:search, :end_date) %>
              <%= submit_tag("Search") %>
            <% end %>
        </div>
    </div>
  </div>
</div>
