<div class="container">
  <div class="row">
    <div class=" col-6 offset-3 mb-5 mt-5">
      <div class="ui-card">

        <h1>Edit the Infos of your pet</h1>
        <%= simple_form_for (@pet) do |f| %>
        <%= f.input :name %>
        <%= f.input :price_in_eur %>
        <%= f.input :pet_type, collection: Pet::PET_TYPES %>
        <%= f.input :description %>
        <%#= f.input :photos, as: :file, input_html: { multiple: true } %>
        <div id="image-container" data-photos="<%= @pet.photos.map { |photo| photo.key } %>">

        </div>
        <%= f.submit("update!", class: "form-actions-btn") %>
        <% end %>
      </div>
    </div>
  </div>
</div>
